datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

enum Role {
  user
  mod
  admin
}

enum ServerStatus {
  installing
  active
  running
  stopped
  suspended
  deleted
}

enum NodeStatus {
  online
  offline
  maintenance
}

enum ThemeType {
  light
  dark
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String
  username       String    @unique
  coins          Float     @default(0)
  role           Role      @default(user)
  discordId      String?   @unique
  pteroUserId    Int?
  isBanned       Boolean   @default(false)
  bannedAt       DateTime?
  bannedBy       String?
  preferences    Json?
  lastActiveAt   DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  servers        Server[]
  transactions   Transaction[]
  tasks          Task[]
  passwordResets PasswordReset[]
  afkSession     AFKSession?
  auditLogs      AuditLog[]
  
  // Relations for "bannedBy" (self-relation)
  bannedUsers    User[]    @relation("BannedBy")
  bannedByUser   User?     @relation("BannedBy", fields: [bannedId], references: [id])
  bannedId       String?

  ads            Ad[]
}

model Server {
  id              String       @id @default(uuid())
  ownerId         String
  owner           User         @relation(fields: [ownerId], references: [id])
  
  // Legacy Pterodactyl fields (optional for migration)
  pteroServerId   Int?
  pteroIdentifier String?
  
  // New self-hosted fields
  nodeId          String?
  node            Node?        @relation(fields: [nodeId], references: [id])
  containerId     String?      // Docker container ID
  serverPath      String?      // e.g., /home/servers/{id}
  ports           Json?        // {game: 25565, rcon: 25575}
  
  planId          String
  plan            Plan         @relation(fields: [planId], references: [id])
  name            String
  status          ServerStatus @default(installing)
  ramMb           Int
  diskMb          Int
  cpuCores        Int
  isSuspended     Boolean      @default(false)
  suspendedAt     DateTime?
  suspendedBy     String?
  expiresAt       DateTime?
  serverIp        String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

// VPS Node for self-hosted panel
model Node {
  id          String     @id @default(uuid())
  name        String
  ipAddress   String
  sshPort     Int        @default(22)
  sshUser     String     @default("root")
  sshKeyPath  String?    // Path to private SSH key on backend server
  sshPassword String?    // Encrypted, fallback if no SSH key
  osType      String     @default("ubuntu")
  
  // Resource limits
  maxRam      Int        // MB
  maxCpu      Int        // Number of cores
  maxDisk     Int        // MB
  usedRam     Int        @default(0)
  usedCpu     Int        @default(0)
  usedDisk    Int        @default(0)
  
  // Status
  status      NodeStatus @default(offline)
  lastPing    DateTime?
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  servers     Server[]
  allocations Allocation[]
}

model Allocation {
  id         String   @id @default(uuid())
  nodeId     String
  node       Node     @relation(fields: [nodeId], references: [id])
  ip         String
  port       Int
  alias      String?
  assigned   Boolean  @default(false)
  serverId   String?  // ID of server using this allocation
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([nodeId, ip, port])
}

model Plan {
  id          String   @id @default(uuid())
  name        String
  ramMb       Int
  diskMb      Int
  cpuPercent  Int
  cpuCores    Int      @default(1)
  slots       Int
  priceCoins  Float
  pteroEggId  Int
  pteroNestId Int
  eggImage    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  servers     Server[]
}

model Settings {
  id                   Int      @id @default(1)
  panelName            String   @default("Panel")
  panelLogo            String?
  supportEmail         String?
  backgroundImage      String?
  loginBackgroundImage String?
  logoSize             Int      @default(48)
  bgColor              String   @default("#0c0229")
  
  theme                Json?
  afk                  Json?
  upgradePricing       Json?
  pterodactyl          Json?
  smtp                 Json?
  discordWebhooks      String[]
  botApiKey            String?
  inviteRewards        Json?
  discordBot           Json?
  boostRewards         Json?
  socialMedia          Json?
  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Transaction {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  type         String   // credit, debit
  amount       Float
  description  String
  balanceAfter Float
  metadata     Json?
  createdAt    DateTime @default(now())
}

model Task {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  type        String
  status      String    @default("pending")
  rewardCoins Float
  metadata    Json?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model EmailTemplate {
  id        String   @id @default(uuid())
  name      String   @unique
  subject   String
  htmlBody  String
  textBody  String
  variables String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InviteClaim {
  id              String   @id @default(uuid())
  discordUserId   String
  invitesRequired Int
  code            String
  createdAt       DateTime @default(now())
  
  @@unique([discordUserId, invitesRequired])
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model RedeemCode {
  id        String    @id @default(uuid())
  code      String    @unique
  amount    Float
  maxUses   Int?      // null = unlimited
  usedCount Int       @default(0)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model AFKSession {
  id               String   @id @default(uuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id])
  startedAt        DateTime
  lastHeartbeat    DateTime
  coinsEarned      Float    @default(0)
  isActive         Boolean  @default(true)
  dailyCoinsEarned Float    @default(0)
  lastResetDate    DateTime @default(now())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  actorId   String?
  user      User?    @relation(fields: [actorId], references: [id])
  action    String
  details   String
  ipAddress String?
  createdAt DateTime @default(now())
}

model Ad {
  id            String    @id @default(uuid())
  title         String
  imageUrl      String?
  redirectUrl   String?
  rawCode       String?   // New: for paste-in ad network codes
  isAFK         Boolean   @default(false) // New: specifically for AFK page ads
  position      String    // e.g., "top", "header-after", "server-list-before", "afk-top", etc.
  positionIndex Int       @default(0)
  priority      Int       @default(0)
  type          String    // "leaderboard", "banner", "gif", "promo-strip", "raw"
  status        String    @default("active")
  ownerId       String?
  owner         User?     @relation(fields: [ownerId], references: [id])
  startDate     DateTime  @default(now())
  endDate       DateTime?
  clicks        Int       @default(0)
  views         Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
